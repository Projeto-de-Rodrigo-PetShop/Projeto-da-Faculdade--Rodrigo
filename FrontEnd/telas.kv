#:kivy 2.3.0

<Gerenciador>:
    Cadastro:
        name: 'cadastro'
    Login:
        name: 'login'   
    Menu:
        name: 'menu'
    Atendimento:
        name: 'atendimento'     
    Comprar:
        name: 'comprar'
    Verificador:
        name: 'verificador'
    FinalizarCompra:
        name: 'finalizar_compra'        

#--------------Organização do Cadastro---------------------------

<Cadastro>:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20
       
        MDLabel:
            text: "Cadastro de Usuário"
            font_size: 32
            size_hint_y: None
            halign:"center"
            font_style:"H4"
        
        MDGridLayout:
            cols: 2
            size_hint_y: None
            height: self.minimum_height
            row_default_height: '140dp'
            row_force_default: True
            col_default_width: '180dp'
            col_force_default: True
            spacing: "10dp"
            
            MDTextField:
                id: nome_input
                hint_text: "Digite seu Nome: "
                size_hint_y: None
                height: 50 
                mode:"rectangle"
                multiline: False
        
            MDTextField:
                id: sobrenome_input
                hint_text: "Digite seu Sobrenome: "
                size_hint_y: None
                height: 50 
                mode:"rectangle"
                multiline: False
        
        MDTextField:
            id: usuario_input
            hint_text: "Digite seu nome de usuário: "
            size_hint_y: None
            height: 50 
            mode:"rectangle"
            multiline: False
        
        MDTextField:
            id: senha_input
            hint_text: "Digite a sua senha: "
            size_hint_y: None
            password:True
            height: 50  
            mode:"rectangle"
            multiline: False 

        MDIconButton:
            icon:"eye"
            style:"tonal"
            pos_hint:{"center_x":0.50}
            on_release: 
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                senha_input.password = False if senha_input.password is True else True
       
        MDRectangleFlatButton:
            pos_hint:{"center_x":0.5}
            id: botao_cadastro
            text: "Login"
            on_release: root.cadastrar()
        
        MDLabel:
            id:mensagem_erro
            text:""  
            theme_text_color:"Error"      

#--------------Organização do Login-------------------

<Login>:
    
    MDBoxLayout: 
        orientation:'vertical'
        padding: 20
        spacing: 20
        
        MDLabel:
            text: "Login de Usuário"
            font_size: 32
            size_hint_y: None
            halign: "center"
            font_style:"H4"
        
        MDTextField:
            id:nome_usuario
            hint_text: "Digite seu nome de usuário: "
            size_hint_y: None
            height: 50
            mode:"rectangle"
            multiline: False
       
        MDTextField:
            id:senha_usuario
            hint_text: "Digite sua senha: "
            size_hint_y: None
            height: 50
            password:True
            mode:"rectangle"   
            multiline: False   

        MDIconButton:
            icon:"eye"
            style:"tonal"
            pos_hint:{"center_x":0.50}
            on_release: 
                self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                senha_usuario.password = False if senha_usuario.password is True else True
        
        MDRaisedButton:
            pos_hint: {"center_x":0.5}
            text: "Entrar"
            on_release: root.login()
        
        MDRaisedButton:
            pos_hint: {"center_x":0.5}
            text:"Voltar ao Cadastro"
            on_release:root.manager.current = 'cadastro'    
        
        MDLabel:
            text:""
            id:mensagem_login
            halign:"center"
            theme_text_color:"Error"

#--------------------Organização do Menu-------------------

<Menu>:    
    FloatLayout:                
        MDBoxLayout:             
            orientation: 'vertical'
            padding:10
            spacing: 10
            size_hint:1,1
        
            MDLabel: 
                text:"Bem-Vindo ao PetShop!"
                size_hint_y:0.2
                halign:"center"
                valign: "middle"
                font_style:"H4"
                text_size:self.size

            MDIconButton:
                icon:"theme-light-dark"
                on_release: app.modo_escuro()
                pos_hint:{"center_x":0.10, "center_y":0.15}
                size:250,50

            MDRaisedButton:
                text: "Loja"
                on_release: root.manager.current = 'atendimento'
                pos_hint:{"center_x":0.10, "center_y":0.15}
                size:250,50
        
            MDRaisedButton:
                pos_hint:{"center_x":0.10, "center_y":0.15}
                size:250,50
                text: "Sair"
                on_release: app.stop() 

        MDLabel:
            id: label_nome 
            size_hint_y:None
            halign:"right"
            valign: "bottom"
            font_size:18
            text_size:self.size

#-------------------Organização do Atendimento--------------------

<Atendimento>:
    MDBoxLayout:
        orientation: 'vertical'
        ActionBar:
            size_hint_y: None
            ActionView:
                ActionPrevious:
                    title: 'Retornar'
                    with_previous: False
                    on_release: root.manager.current = 'menu'
                ActionButton:
                    text: "Sair"
                    on_release: app.stop()    
            
        ScrollView:   
            MDBoxLayout:
                id: box
                spacing: 10
                padding: 10
                orientation: 'vertical'
                size_hint_y: None
                height: self.minimum_height
            
                MDLabel:
                    id: label_atendimento
                    text: 'Escolha um serviço:'
                    font_size: 18
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
        
                GridLayout:
                    cols: 2
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: '140dp'
                    row_force_default: True
                    col_default_width: '180dp'
                    col_force_default: True
                    spacing: "10dp" 
                    
                    #Linha de Vacinação
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.25
                        spacing: "5dp"                
            
                        MDLabel:
                            text:"Vacinação - R$200"
                            halign: "center"
                            font_style: "Caption"
                            size_hint_y: None
                            height: self.texture_size[1]
                        
                        FitImage:
                            source:"imagens/4- VACINA.png"
                            size_hint_y: None
                            height: "65dp"

                        MDRaisedButton:              
                            text: 'Comprar Serviço'
                            size_hint_y: None
                            height: "35dp"
                            on_release: root.iniciar_atendimento(1) 
                    
                    #Linha de Exames
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.25
                        spacing: "5dp"
                        
                        MDLabel:
                            text:"Exames - R$500"
                            halign: "center"
                            font_style: "Caption"
                            size_hint_y: None
                            height: self.texture_size[1]
                        
                        FitImage:
                            source:"imagens/Exames-laboratoriais.jpg"
                            size_hint_y: None
                            height: "65dp"

                        MDRaisedButton:              
                            text: 'Comprar Serviço'
                            size_hint_y: None
                            height: "35dp"
                            on_release: root.iniciar_atendimento(2) 

                    #Linha de Banho e Tosa        
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.25
                        spacing: "5dp" 
                    
                        MDLabel:
                            text:"Banho e Tosa - R$150"
                            halign: "center"
                            font_style: "Caption"
                            size_hint_y: None
                            height: self.texture_size[1]
                        
                        FitImage:
                            source:"imagens/banho-tosa-pet-shop.jpg"
                            size_hint_y: None
                            height: "65dp"

                        MDRaisedButton:              
                            text: 'Comprar Serviço'
                            size_hint_y: None
                            height: "35dp"
                            on_release:  root.iniciar_atendimento(3) 

                    #Linha de Adestramento            
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.25
                        spacing: "5dp"  
 
                        MDLabel:
                            text:"Adestramento - R$350"
                            halign: "center"
                            font_style: "Caption"
                            size_hint_y: None
                            height: self.texture_size[1]
                        
                        FitImage:
                            source:"imagens/adestramento.jpg"
                            size_hint_y: None
                            height: "65dp"

                        MDRaisedButton:              
                            text: 'Comprar Serviço'
                            size_hint_y: None
                            height: "35dp"
                            on_release: root.iniciar_atendimento(4)
        
                MDRaisedButton:    
                    text: 'Cancelar'
                    size_hint: None, None
                    size: "200dp", "50dp"
                    md_bg_color: 1, 0, 0, 1
                    id: botao_cancelar
                    on_release: root.iniciar_atendimento(0) 
            
                MDLabel:
                    id: label_cancelar
                    text: ""


#------------------------Organização de Comprar--------------------

<Comprar>:
    MDBoxLayout:
        orientation: 'vertical'

        ActionBar:
            size_hint_y: None
            height: "56dp"
            ActionView:
                ActionPrevious:
                    title: 'Loja'
                    with_previous: False
                    on_release: root.manager.current = 'atendimento'
                ActionButton:
                    text: "Sair"
                    on_release: app.stop()

        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                padding: "10dp"
                spacing: "10dp"
                size_hint_y: None
                height: self.minimum_height

                MDLabel:
                    id: label_pagamento
                    text: 'Escolha um método de pagamento:'
                    font_size: 18
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                GridLayout:
                    cols: 2
                    size_hint_y: None
                    height: self.minimum_height
                    row_default_height: '140dp'
                    row_force_default: True
                    col_default_width: '180dp'
                    col_force_default: True
                    spacing: "10dp"

                    # Pagamento: Boleto
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.25
                        spacing: "5dp"

                        MDLabel:
                            text: "Boleto"
                            halign: "center"
                            font_style: "Caption"
                            size_hint_y: None
                            height: self.texture_size[1]

                        FitImage:
                            source: "imagens/Boleto-Bancario-PNG.png"
                            size_hint_y: None
                            height: "60dp"

                        MDRaisedButton:
                            text: "Pagar"
                            size_hint_y: None
                            height: "35dp"
                            on_release: root.iniciar_pagamento(1)

                    # Pagamento: Pix
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.25
                        spacing: "5dp"

                        MDLabel:
                            text: "Pix"
                            halign: "center"
                            font_style: "Caption"
                            size_hint_y: None
                            height: self.texture_size[1]

                        FitImage:
                            source: "imagens/pix-foto-site-1.png"
                            size_hint_y: None
                            height: "60dp" 
                        
                        MDRaisedButton:
                            text: "Pagar"
                            size_hint_y: None
                            height: "35dp"
                            on_release: root.iniciar_pagamento(2)

                    # Pagamento: Cartão de Crédito
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.25
                        spacing: "5dp"

                        MDLabel:
                            text: "Crédito"
                            halign: "center"
                            font_style: "Caption"
                            size_hint_y: None
                            height: self.texture_size[1]

                        FitImage:
                            source: "imagens/fazer-cartao-de-credito-mobills.jpg"
                            size_hint_y: None
                            height: "60dp"

                        MDRaisedButton:
                            text: "Pagar"
                            size_hint_y: None
                            height: "35dp"
                            on_release: root.iniciar_pagamento(3)

                    # Pagamento: Cartão de Débito
                    MDBoxLayout:
                        orientation: 'vertical'
                        size_hint_x: 0.25
                        spacing: "5dp"

                        MDLabel:
                            text: "Débito"
                            halign: "center"
                            font_style: "Caption"
                            size_hint_y: None
                            height: self.texture_size[1]

                        FitImage:
                            source: "imagens/Cartao-com-uso-exclusivo-para-Debito.jpg"
                            size_hint_y: None
                            height: "60dp"

                        MDRaisedButton:
                            text: "Pagar"
                            size_hint_y: None
                            height: "35dp"
                            on_release: root.iniciar_pagamento(4)

                MDTextField:
                    id: valores
                    hint_text: "Digite o valor"
                    size_hint_x: None
                    width: "200dp"
                    size_hint_y: None
                    height: "50dp"
                    pos_hint: {"center_x": 0.5}
                    mode: "rectangle"
                    input_filter: 'float'
                    multiline: False 
                
                MDRaisedButton:
                    id: botao_cancelar
                    text: "Cancelar Compra"
                    size_hint: None, None
                    size: "200dp", "50dp"
                    md_bg_color: 1, 0, 0, 1
                    pos_hint: {"center_x": 0.5}
                    md_bg_color: 1, 0, 0, 1
                    on_release: root.manager.current = 'menu'

                MDLabel:
                    id: label_cancelar
                    text: ""
                    font_size: 16
                    halign: "center"
                    size_hint_y: None
                    theme_text_color:"Error"
                    height: self.texture_size[1]

#--------------------Organização do Verificador-------------------------

<Verificador>: 
    FloatLayout:
        MDBoxLayout:
            orientation:'vertical'
            size_hint_y: None
            padding:20
            spacing:10            
            size_hint:1,1

            MDLabel:
                id: label_verificador
                text:"" 
                size_hint_y:0.2
                halign:"center"
                valign: "middle"
                font_style:"H6"
                text_size:self.size
        
            MDRaisedButton:
                text:"Finalizar Compra"
                size_hint_x:0.3
                on_release: root.manager.current = 'finalizar_compra' 
        
            MDRaisedButton:
                text:"Cancelar Compra"
                size_hint_x:0.3
                md_bg_color:1,0,0,1
                on_release: root.manager.current = 'menu'           

#----------Tela de Finalização da Compra----------------

<FinalizarCompra>:
    FloatLayout:
        MDBoxLayout:
            orientation: 'vertical'
            size_hint_y:None
            padding:20
            spacing:10 
            size_hint:1,1 
            
            MDLabel:
                text: "Compra Finalizada com Sucesso!"
                font_size: 32
                text_size:self.size
                halign:"center"
                valign:"middle"
        
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint_y:None
            padding:20
            spacing:10 
            size_hint:1,1         
            
            MDRaisedButton:
                text: "Voltar ao Menu"
                on_release: root.manager.current = 'menu'
        
            MDRaisedButton:
                text: "Sair"
                on_release: app.stop()    